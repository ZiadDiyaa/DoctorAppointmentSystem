@using DoctorAppointmentSystem.Application.DTOs
@model ConsumableDTO
@{
Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="AddConsumable">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Consumable</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label><span class="text-danger">*</span>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category"></label><span class="text-danger">*</span>
            <input asp-for="Category" class="form-control" />
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UnitPrice"></label><span class="text-danger">*</span>
            <input asp-for="UnitPrice" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="UnitPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="QuantityInStock"></label><span class="text-danger">*</span>
            <input asp-for="QuantityInStock" class="form-control" type="number" />
            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ThresholdQuantity"></label><span class="text-danger">*</span>
            <input asp-for="ThresholdQuantity" class="form-control" type="number" />
            <span asp-validation-for="ThresholdQuantity" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DateAdded"></label><span class="text-danger">*</span>
            <input asp-for="DateAdded" class="form-control" type="date" />
            <span asp-validation-for="DateAdded" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ExpirationDate"></label>
            <input asp-for="ExpirationDate" class="form-control" type="date" />
            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Barcode"></label>
            <input asp-for="Barcode" class="form-control" />
            <span asp-validation-for="Barcode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="InventoryID"></label><span class="text-danger">*</span>
            <input asp-for="InventoryID" class="form-control" />
            <span asp-validation-for="InventoryID" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}