@using DoctorAppointmentSystem.Application.DTOs
@model IEnumerable<ConsumableDTO>

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">All Consumables</h2>
        <hr />
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Unit Price</th>
            <th>Quantity In Stock</th>
            <th>Threshold Quantity</th>
            <th>Date Added</th>
            <th>Expiration Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var consumable in Model)
        {
        <tr>
            <td>@consumable.Name</td>
            <td>@consumable.Description</td>
            <td>@consumable.Category</td>
            <td>@consumable.UnitPrice</td>
            <td>@consumable.QuantityInStock</td>
            <td>@consumable.ThresholdQuantity</td>
            <td>@consumable.DateAdded.ToShortDateString()</td>
            <td>@consumable.ExpirationDate?.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@consumable.ConsumableID" class="btn btn-warning">Edit</a>
                <a asp-action="Delete" asp-route-id="@consumable.ConsumableID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
            </td>
        </tr>
        }
        </tbody>
    </table>
    <div class="mt-3">
        <a asp-action="Create" class="btn btn-primary">Add New Consumable</a>
    </div>
</div>