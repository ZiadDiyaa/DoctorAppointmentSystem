@using DoctorAppointmentSystem.Application.DTOs
@model ConsumableDTO

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-danger">Delete Consumable</h2>
        <hr />
    </div>
    <h4>Are you sure you want to delete this consumable?</h4>
    <div class="mb-3">
        <strong>Name:</strong> @Model.Name
    </div>
    <div class="mb-3">
        <strong>Category:</strong> @Model.Category
    </div>
    <div class="mb-3">
        <strong>Quantity In Stock:</strong> @Model.QuantityInStock
    </div>
    <div class="mb-3">
        <strong>Unit Price:</strong> @Model.UnitPrice
    </div>
    <div class="mb-3">
        <strong>Date Added:</strong> @Model.DateAdded.ToShortDateString()
    </div>
    <div class="mb-3">
        <strong>Expiration Date:</strong> @Model.ExpirationDate?.ToShortDateString()
    </div>

    <form method="post" asp-action="DeleteConsumable">
        <input type="hidden" asp-for="ConsumableID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="GetAllConsumables" class="btn btn-secondary">Cancel</a>
    </form>
</div>