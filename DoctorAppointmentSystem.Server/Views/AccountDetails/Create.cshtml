@using DoctorAppointmentSystem.Application.DTOs
@model AccountDetailsDTO


@{
Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post" asp-action="AddAccountDetails">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Account Details</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="UserName"></label><span class="text-danger">*</span>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label><span class="text-danger">*</span>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CreatedDate"></label><span class="text-danger">*</span>
            <input asp-for="CreatedDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" readonly />
            <span asp-validation-for="CreatedDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="PasswordHash"></label><span class="text-danger">*</span>
            <input asp-for="PasswordHash" class="form-control" />
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}