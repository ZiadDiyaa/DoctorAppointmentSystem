@using DoctorAppointmentSystem.Application.DTOs
@model DoctorDTO

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-danger">Delete Doctor</h2>
        <hr />
    </div>
    <h4>Are you sure you want to delete this doctor?</h4>
    <div class="mb-3">
        <strong>First Name:</strong> @Model.FirstName
    </div>
    <div class="mb-3">
        <strong>Last Name:</strong> @Model.LastName
    </div>
    <div class="mb-3">
        <strong>Specialization:</strong> @Model.Specialization
    </div>
    <div class="mb-3">
        <strong>Rating:</strong> @Model.Rating
    </div>
    <div class="mb-3">
        <strong>Email:</strong> @Model.Email
    </div>
    <div class="mb-3">
        <strong>Phone Number:</strong> @Model.PhoneNumber
    </div>

    <form method="post" asp-action="DeleteDoctor">
        <input type="hidden" asp-for="DoctorID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="GetAllDoctors" class="btn btn-secondary">Cancel</a>
    </form>
</div>