@using DoctorAppointmentSystem.Application.DTOs
@model IEnumerable<DoctorDTO>

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">All Doctors</h2>
        <hr />
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialization</th>
            <th>Rating</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.Rating</td>
                <td>@doctor.Email</td>
                <td>@doctor.PhoneNumber</td>
                <td>
                    <a asp-action="EditDoctor" asp-route-doctorID="@doctor.DoctorID" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteDoctor" asp-route-doctorID="@doctor.DoctorID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>