@model IEnumerable<DoctorAppointmentSystem.Application.DTOs.DoctorDTO>

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Available Doctors</h2>
        <hr />
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Specialization</th>
            <th>City</th>
            <th>Area</th>
            <th>Address</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.FirstName</td>
                <td>@doctor.LastName</td>
                <td>@doctor.Specialization</td>
                <td>@doctor.City</td>
                <td>@doctor.Area</td>
                <td>@doctor.Address</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.DoctorID" class="btn btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@doctor.DoctorID" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>