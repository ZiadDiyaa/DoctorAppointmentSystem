@using DoctorAppointmentSystem.Application.DTOs
@model AdminDTO

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-danger">Delete Admin</h2>
        <hr />
    </div>
    <h4>Are you sure you want to delete this admin?</h4>
    <div class="mb-3">
        <strong>First Name:</strong> @Model.FirstName
    </div>
    <div class="mb-3">
        <strong>Last Name:</strong> @Model.LastName
    </div>
    <div class="mb-3">
        <strong>Email:</strong> @Model.Email
    </div>
    <div class="mb-3">
        <strong>Phone Number:</strong> @Model.PhoneNumber
    </div>

    <form method="post" asp-action="DeleteAdmin">
        <input type="hidden" asp-for="AdminID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="GetAllAdmins" class="btn btn-secondary">Cancel</a>
    </form>
</div>