@using DoctorAppointmentSystem.Application.DTOs
@model IEnumerable<AdminDTO>

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">All Admins</h2>
        <hr />
    </div>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var admin in Model)
        {
            <tr>
                <td>@admin.FirstName</td>
                <td>@admin.LastName</td>
                <td>@admin.Email</td>
                <td>@admin.PhoneNumber</td>
                <td>
                    <a asp-action="EditAdmin" asp-route-adminID="@admin.AdminID" class="btn btn-warning">Edit</a>
                    <a asp-action="DeleteAdmin" asp-route-adminID="@admin.AdminID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>