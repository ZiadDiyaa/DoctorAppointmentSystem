@using DoctorAppointmentSystem.Application.DTOs
@model AppointmentDTO

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-danger">Delete Appointment</h2>
        <hr />
    </div>
    <h4>Are you sure you want to delete this appointment?</h4>
    <div class="mb-3">
        <strong>Patient ID:</strong> @Model.PatientID
    </div>
    <div class="mb-3">
        <strong>Doctor ID:</strong> @Model.DoctorID
    </div>
    <div class="mb-3">
        <strong>Appointment Date:</strong> @Model.AppointmentDate.ToShortDateString()
    </div>
    <div class="mb-3">
        <strong>Start Time:</strong> @Model.StartTime.ToShortTimeString()
    </div>
    <div class="mb-3">
        <strong>Status:</strong> @Model.Status
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="AppointmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>